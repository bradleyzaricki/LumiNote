<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LumikitApp.LumikitWindow"
        Width="800" Height="450"
        Background="Black"
        Title="Lumikit">

	<Grid RowDefinitions="Auto,Auto,*" Margin="10">

		<!-- Playback Controls -->
		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button Name="PauseTrackButton" Content="Pause" Width="80"/>
			<Button Name="ResumeTrackButton" Content="Resume" Width="80"/>
			<Button Name="NextTrackButton" Content="Next" Width="80"/>
			<TextBlock Name="StopwatchLabel" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
			<TextBlock Text="BPM:" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
			<TextBox Name="BpmInput" Width="60" Text="120" />
			<Button Name="SaveTrackDataButton" Content="Save" Width="80"/>
		</StackPanel>

		<!-- Track Info -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
			<Image Name="AlbumArt" Width="60" Height="60"/>
			<TextBlock Name="NowPlayingText" Foreground="White" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"/>
		</StackPanel>

		<!-- Timeline + Color Palette -->
		<DockPanel Grid.Row="2" Margin="0,10,0,0">
			<StackPanel DockPanel.Dock="Top">
				<Border Name="TopColorBar" Height="5" Background="Gray"/>
				<ScrollViewer Name="TimelineScrollViewer"
							  HorizontalScrollBarVisibility="Visible"
							  VerticalScrollBarVisibility="Disabled"
							  Height="130">
					<Canvas Name="TimelineCanvas" Height="80"/>
				</ScrollViewer>
				<Border Name="BottomColorBar" Height="5" Background="Gray"/>
			</StackPanel>


			<WrapPanel Name="ColorPalette" Orientation="Horizontal"
                       Margin="0,10,0,0"
                       DockPanel.Dock="Bottom"
                       Height="40"/>
		</DockPanel>
	</Grid>
</Window>
